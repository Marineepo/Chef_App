<p id="notice"><%= notice %></p>
<center><div class="label">
  <font color="grey"><h1>Favorite Recipes</h1></font>
  <font color="grey"><p>Below are some of my favorite recipes, ENJOY!!!!</p></font>
</center></div>
<center><table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to "#{post.title}", post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</center></table>

